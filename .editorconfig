# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8

[*.ts]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.js]
# 2 space indentation
[*.{tf,tfvars,tfdraft,tfstate,yaml,yml,md,playbook,hcl,hcl2,json}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
